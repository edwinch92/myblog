<%= form_for @project do |f|%>
	<% if @project.errors.any? %>
		<h2><%= pluralize(@project.error.count, "error") %> prevented this project from saving : </h2>
		<ul>
			<%= @project.error.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<%= f.label :title, "Insert your Title here" %><br>
	<%= f.text_field :title %>

	<br>
	<br>

	<%= f.label :description, "Write your Description here" %><br>
	<%= f.text_area :description %>

	<br>
	<br>

	<%= f.label :link, "Insert your Link here" %><br>
	<%= f.text_field :link %>

	<br>
	<br>

	<%= f.submit %>
<% end %>

